{
    "name": "@amzn/react-native-w3cmedia",
    "version": "2.1.87",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
      "dist",
      "image",
      "react-native.config.js",
      "kepler-compatibility.json",
      "SystemModules",
      "SystemBundles"
    ],
    "scripts": {
      "clean": "rm -rf dist package-lock.json bvm node_modules",
      "test:snapshot": "jest --colors --updateSnapshot",
      "start": "node node_modules/react-native/local-cli/cli.js start",
      "test": "jest --colors",
      "lint": "",
      "compile": "tsc -p tsconfig-build.json",
      "docgen": "npx typedoc --basePath src/interface --entryPointStrategy expand --excludePrivate --excludeProtected --disableSources --hideGenerator src/interface/",
      "build": "node scripts/generate-env.js release && npm-run-all compile docgen",
      "build:release": "node scripts/generate-env.js release && npm-run-all compile docgen",
      "build:debug": "node scripts/generate-env.js debug && npm-run-all compile docgen",
      "prepublishOnly": "KEPLER_NPM_COMMAND=npm-pretty-much react-native build-system-bundle-kepler"
    },
    "dependencies": {
      "eventemitter3": "^4.0.7",
      "react-native-tscodegen": "^0.67.0",
      "react-native-tscodegen-types": "0.66.0",
      "@amzn/keplerscript-turbomodule-api": "^1.0.0",
      "@amzn/keplermediadescriptor": "^1.1.0",
      "@amzn/kepler-media-controls": "^1.0.0",
      "@amzn/kepler-media-types": "^1.0.0"
    },
    "peerDependencies": {
      "@amzn/react-native-kepler": "^2.0.0",
      "react": "18.2.0",
      "react-native": "0.72.0"
    },
    "devDependencies": {
        "@babel/core": "^7.20.0",
        "@babel/runtime": "^7.20.0",
        "@react-native-community/eslint-config": "^3.0.1",
        "@testing-library/react-native": "^11.5.4",
        "@types/jest": "^28.0.0",
        "@types/react-native": "*",
        "@types/react-test-renderer": "^18.0.0",
        "@react-native-community/cli": "11.3.2",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "babel-jest": "^28.0.0",
        "eslint": "^8.12.0",
        "eslint-plugin-simple-import-sort": "^5.0.3",
        "jest": "^28.0.0",
        "metro-react-native-babel-preset": "^0.76.5",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.2",
        "react-test-renderer": "18.2.0",
        "ts-jest": "^28.0.0",
        "typedoc": "^0.25.x",
        "typescript": "4.8.4",
        "@babel/traverse": "7.22.8",
        "@react-native/metro-config": "^0.72.6",
        "@types/metro-config": "^0.76.3",
        "babel-cli":"6.26.0",
        "@amzn/kepler-cli-platform": "^0"
    },
    "resolutions": {
      "@types/react": "^18"
    },
    "kepler": {
      "projectType": "turbomodule",
      "targets": [
        "tv",
        "multimodal",
        "auto",
        "4kmax_g1"
      ],
      "toolchain": "clang",
      "features": [
        "vega"
      ]
    },
    "eslintConfig": {
      "extends": "@react-native-community",
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "@typescript-eslint"
      ],
      "root": true
    },
    "prettier": {
      "arrowParens": "avoid",
      "bracketSameLine": true,
      "bracketSpacing": false,
      "singleQuote": true,
      "trailingComma": "all"
    }
}
